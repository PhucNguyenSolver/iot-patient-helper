<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/dashboard"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include android:id="@+id/cardView1" layout="@layout/cardview" />
        <include android:id="@+id/cardView2" layout="@layout/cardview" />
        <include android:id="@+id/cardView3" layout="@layout/cardview" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/alarmText"
            android:text="ALARM"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <Button
            android:id="@+id/alarmAcceptButton"
            android:text="@string/accept"
            android:layout_gravity="center"
            android:layout_width="151dp"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp" />

        <WebView
            android:id="@+id/alarmWebView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF" />


    </LinearLayout>
</LinearLayout>